@{
    ViewData["Title"] = "ساخت مخصول";
}


@model Product
<div asp-validation-summary="ModelOnly">
</div>
<br />
<br />

<form method="post">
    <div class="row">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" placeholder="Product name" required="required" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="row">
        <label asp-for="Color"></label>
        <input type="color" asp-for="Color" placeholder="Product color" required="required" />
        <span asp-validation-for="Color"></span>
    </div>

    <div class="row">
        <label asp-for="Model"></label>
        <input type="text" asp-for="Model" placeholder="Product color" required="required" />
        <span asp-validation-for="Color"></span>
    </div>
    <div class="row">
        <label asp-for="Code"></label>
        <input type="number" asp-for="Code" placeholder="Product color" required="required" />
        <span asp-validation-for="Code"></span>
    </div>
    <div class="row">
       
            <label asp-for="Brand"></label>
            <select  asp-for="Brand" asp-items="Html.GetEnumSelectList<Brand>()" class="form-select mb-2 col-5"></select>
       
        
    </div>
    <button type="submit" asp-controller="Product" asp-action="Create" class="btn btn-primary">ساخت محصول</button>
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}